{{#withExtend this q=@root.request.params.query.q}}
{
  "size": 1,
  "_source": [ "district", "county", "point", "place", "country", "region_codes" ],
  "query": {
    "bool": {
      "filter": [
        { "terms": { "_type": [ "os_place", "postcode" ] } },
        { "term": { "country": { "value": "Scotland" } } },
        { "exists": { "field": "district" } },
        {
          "ids": {
            "values": [
              {{{stringify
                (uppercase
                  (regexReplace
                    (regexReplace q "[^a-z0-9]" "ig" "")
                    "([0-9][a-z]{2})$" "ig" " $1"
                  )
                )
              }}}
            ]
          }
        }
      ]
    }
  }
}
{{/withExtend}}