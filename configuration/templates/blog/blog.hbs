<div class="container-content content-page container-centred">
  <div class="b-padding-full b-margin-full">
    <h1 class="mdc-typography--headline4">
      Blog
    </h1>
    {{#each @root.data.primaryResponse.hits.hits ~}}
    {{#with _source ~}}
    <div class="mdc-card mdc-elevation--z3 x-padding-full t-margin-full">
      <div class="mdc-typography--headline5">
        <a href="/blog/{{replace post_slug "_" "/"}}">{{{title}}}</a>
      </div>
      <div class="mdc-typography--body2 b-margin">
        Posted {{momentFormat (moment publish_on "x") "Do MMM YYYY"}}
      </div>
      <div class="mdc-typography--body1">
        {{{description_truncated}}} <a href="/blog/{{replace post_slug "_" "/"}}">Read more</a>
      </div>
    </div>
    {{/with ~}}
    {{/each ~}}
    {{> pagination firstLastNavigation=true paging=@root.data.primaryResponse.pagination}}
  </div>
</div>