<form id="sign-up-form" method="POST" class="container form authentication-form details-form" data-component="TasksTrigger" data-TasksTrigger="sign-up">
  <div class="l-margin r-margin">
    <div class="bg-error s-rounded x-padding v-margin" id="sign-up-message">
      <span id="form-message"></span>
    </div>
  </div>
  <div class="x-padding">
    <p>
      Create a new {{!--My Volunteer--}} Account below. If you already have an {{!--My Volunteer--}} Account, please <strong><a href="/sign-in">sign in</a></strong>.
    </p>
    <div id="form-section-email" class="form">
      <div class="t-padding-full">
        <div class="form-group has-icon-left">
          <input class="form-input" type="email" id="sign-up-email" placeholder="Email" required />
          <span class="form-icon far fa-envelope" id="sign-up-email-icon"></span>
        </div>
        <div class="form-group has-icon-left">
          <input class="form-input" type="email" id="sign-up-email-confirm" placeholder="Confirm email" data-lpignore="true" autocomplete="nope" required />
          <span class="form-icon far fa-envelope" id="sign-up-email-confirm-icon"></span>
        </div>
        <div class="form-group has-icon-left">
          <input class="form-input" type="password" id="sign-up-password" placeholder="Password" data-lpignore="true" autocomplete="nope" required />
          <span class="form-icon far fa-key" id="sign-up-password-icon"></span>
        </div>
        <div class="form-group has-icon-left">
          <input class="form-input" type="password" id="sign-up-password-confirm" placeholder="Confirm password" data-lpignore="true" autocomplete="nope" required />
          <span class="form-icon far fa-key" id="sign-up-password-confirm-icon"></span>
        </div>
      </div>
      <div id="form-section-sign-up-buttons" class="t-margin">
        <div class="b-padding-full">
          <button class="btn btn-primary btn-lg" type="submit" id="sign-up-submit" >
            Sign up
          </button>
        </div>

        <div class="divider text-center v-margin-full" data-content="or"></div>

        <div class="t-padding-full">
          {{> account_sign_in_social messageSelector="#sign-up-message"}}
        </div>

        <p class="v-margin-full v-padding-full">
          Read our <a href="/privacy" target="_blank">privacy notice</a>
        </p>
        {{!-- <h3>
          Already have an account?
        </h3>
        <div class="t-margin b-margin-full">
          <a href="/sign-in" class="btn">Sign in</a>
        </div> --}}
        <div class="label label-warning x-padding" style="width:100%;">
          <h3>
            Group administrator?
          </h3>
          <div class="my-saltire columns t-margin">
            <div class="column col-6 my-saltire-item align-centre">
              <a href="/sign-up-admin" class="btn text-centre">Request approval</a>
            </div>
            <div class="column col-6 my-saltire-item align-centre">
              <a href="/sign-in-admin" class="btn text-centre">Sign in</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <input type="hidden" name="redirect" id="redirect" value="home" />
</form>

{{> account_task_sign_in}}
{{> account_task_sign_up}}
