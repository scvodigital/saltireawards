{{#withExtend @root.request.body code=(random 0 100000000)}}
  {{#json}}
    {{#json key='users' type='array'}}
      {{#json}}
        {{{json key='hours_verify_code' value=@root.data.accountInfo.hours_verify_code}}},
        {{{json key='hours_verify_award' value=@root.data.accountInfo.hours_verify_award }}},
        {{{json key='certificate_url' value=@root.data.accountInfo.certificate_url}}},

        {{#if @root.data.codeRequired}}
          {{{json key='approval_code' value=code}}},
          {{{json key='approval_email' value=approval_email}}},
          {{#json key='approval_url' type="text"}}https://{{@root.request.headers.host}}/user-approval/?code={{code}}&user_id={{external_id}}{{/json}},
          {{#json key='approval_needed' type="boolean"}}true{{/json}},
        {{else}}
          "approval_needed" : false, {{!-- Hack - it's not possible to enter false in the json parser due to a bug --}}
        {{/if}}

        {{{json key='first_name' value=first_name}}},
        {{{json key='last_name' value=last_name}}},
        {{{json key='postcode' value=postcode}}},
        {{{json key='external_id' value=external_id}}},
        {{{json key='date_of_birth' value=date_of_birth}}},
        {{{json key='organisation_name' value=organisation_name}}},
        {{{json key='school_college_name' value=school_college_name}}},
        {{{json key='school_college_id' value=school_college_id}}},
        {{{json key='phone' value=phone}}},
        {{{json key='title' value=title}}},
        {{{json key='email' value=email}}},
          "email_consent" : {{#compare email_consent '===' 'on'}}true{{else}}false{{/compare}},
        {{{json key='local_authority' value=local_authority}}},
        {{{json key='tsi_contact_email' value=tsi_contact_email}}},
        {{{json key='tsi_area' value=tsi_area}}},
        "summit_certificate_permission" : {{#if @root.data.accountInfo.summit_certificate_permission}}true{{else}}false{{/if}},
        {{{json key='user_type' value=(if admin "Group Admin" else="Volunteer")}}}
      {{/json}},
    {{/json}}
  {{/json}}
{{/withExtend}}