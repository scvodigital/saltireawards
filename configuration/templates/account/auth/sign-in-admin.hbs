<div id="sign-in-form" class="container form authentication-form">
  <div class="l-margin r-margin">
    <div class="bg-error s-rounded x-padding v-margin" id="sign-in-message">
      <span id="form-message"></span>
    </div>
  </div>
  <div class="x-padding">

    <h3>
      Are you a volunteer?
    </h3>
    <div class="my-saltire columns t-margin b-margin-full">
      <div class="column col-6 my-saltire-item align-centre">
        <a href="/sign-up" class="btn text-center">Sign up as a volunteer</a>
      </div>
      <div class="column col-6 my-saltire-item align-centre">
        <a href="/sign-in" class="btn text-centre">Sign in</a>
      </div>
    </div>

    <h3 class="t-padding-full">
      Are you the administrator for a group?
    </h3>

    <div id="form-section-email">
      <div class="label label-warning t-margin x-padding t-padding" style="width:100%;">
        <div class="form-group has-icon-left">
          <input class="form-input" type="email" id="sign-in-email" placeholder="Email" />
          <span class="form-icon far fa-envelope" id="sign-in-email-icon"></span>
        </div>

        <div class="form-group has-icon-left">
          <input class="form-input" type="password" id="sign-in-password" placeholder="Password" />
          <span class="form-icon far fa-key" id="sign-in-password-icon"></span>
        </div>
      </div>
    </div>
    <div id="form-section-sign-in-buttons" class="">
      <div class="label label-warning x-padding t-padding b-margin-full" style="width:100%;">
        <button class="btn btn-primary" type="submit" id="sign-in-submit" data-component="TasksTrigger" data-TasksTrigger="sign-in" data-provider-id="password">
          Sign in
        </button>
        <p class="v-margin-full">
          Forgot your password? <a href="/reset-password">Reset password</a>
        </p>
        <p class="v-margin-full">
          Read our <a href="/privacy" target="_blank">privacy notice</a>
        </p>
        <h3>
          Don't have an account?
        </h3>
        <div class="t-margin-full">
          <a href="/sign-up-admin" class="btn">Request approval</a>
        </div>
      </div>
    </div>
  </div>
</form>

{{> account_task_sign_in}}