<div class="empty">
  <div class="empty-icon">
    <span class="fal fa-user{{#if @root.data.isAdmin}}s{{else}}-clock{{/if}} fa-3x"></span>
  </div>
  {{> log_hours_info}}
  <div class="empty-action">
    {{> log_action_buttons}}
  </div>
</div>

<div class="content-break">
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" preserveAspectRatio="none">
    <polygon fill="#ebedfa" points="100,0 100,100 0,0"></polygon>
  </svg>
  <div class="container">
    <div class="columns">
      <div class="column col-2 col-md-12 hide-md">
        <strong>Organisation</strong>
      </div>
      <div class="column col-4 col-md-12 hide-md">
        <strong>Role</strong>
      </div>
      <div class="column col-2 col-md-12 hide-md">
        <strong>Date logged</strong>
      </div>
      <div class="column col-2 col-md-12 hide-md">
        <strong>Hours</strong>
      </div>
      <div class="column col-2 col-md-12 hide-md">
        <strong>Verified</strong>
      </div>

    </div>
    {{#each @root.data.hoursInfo ~}}
    <div class="columns">
      <div class="column col-2 col-md-12">
        <strong class="show-md">Organisation</strong>
        {{organisation_name}}
      </div>
      <div class="column col-4 col-md-12">
        {{#if task_role ~}}
        <strong class="show-md">Role</strong>
        {{truncate task_role 140}}
        {{/if ~}}
      </div>
      <div class="column col-2 col-md-12">
        <strong class="show-md">Date logged</strong>
        {{momentFormat (moment createdDate "YYYY-MM-DD") "MMMM Do YYYY"}}
      </div>
      <div class="column col-2 col-md-12">
        <strong class="show-md">Hours</strong>
        {{hours}}
      </div>
      <div class="column col-2 col-md-12">
        <strong class="show-md">Verified</strong>
        <span class="far fa-{{#if verified}}check{{else}}times{{/if}} text-{{#if verified}}success{{else}}error{{/if}}"></span>
      </div>
    </div>
    {{/each ~}}
  </div>
</div>