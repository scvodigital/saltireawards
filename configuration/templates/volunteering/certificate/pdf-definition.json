{
  "info": {
    "title": "My Saltire Awards certificate",
    "author": "Saltire Awards",
    "subject": "Saltire Awards certificate"
  },
  "pageSize": "A4",
  "pageMargins": [70, 60, 70, 50],
  "styles": {
    "title": {
      "fontSize": 20,
      "bold": true
    },
    "subtitle": {
      "fontSize": 16
    },
    "h1": {
      "fontSize": 20,
      "bold": true,
      "margin": [0, 10, 0, 5]
    },
    "h2": {
      "fontSize": 18,
      "bold": true,
      "margin": [0, 10, 0, 5]
    },
    "h3": {
      "fontSize": 16,
      "bold": true,
      "margin": [0, 10, 0, 5]
    },
    "h4": {
      "fontSize": 14,
      "bold": true,
      "margin": [0, 10, 0, 5]
    },
    "h5": {
      "fontSize": 13,
      "bold": true,
      "margin": [0, 10, 0, 5]
    }
  },
  "background": [
    {
      "svg": "{{> certificate_images_svg_background}}"
    }
  ],
  "content": [
    {{#each @root.data.pdfObjects ~}}
    {{> certificate_content award=user.certificate_type last=@last}}{{#unless @last}},{{/unless}}
    {{/each ~}}
  ]
}