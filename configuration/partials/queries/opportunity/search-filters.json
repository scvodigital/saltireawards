  "bool": {
    "must": [
      {
        "term": {
          "_type": {
            "value" : "milo-volunteering-opportunity"
          }
        }
      },
      {{>queries_date_range field="date_last_modified" gt="now-12M"}}
    ]
  }
},
{{#if location ~}}
{
  "bool": {
    "should": [
      {{>queries_opportunity_search_filters_locations @root.request.params.query}}
