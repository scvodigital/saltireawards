<div class="card search-result b-margin-full" data-opportunity-id="{{Id}}" data-opportunity-layout="Search Result" data-opportunity-context="{{default viewContext "Search Results"}}">
  {{> volunteering_opportunity_key_info type="search-result"}}
  {{!-- <div class="divider"></div> --}}
  {{#compare (trim (getProperty @root.data.profileInfo.notes Id)) "!==" "" ~}}
    {{> volunteering_opportunity_description limit="3rem" description=description}}
    {{> volunteering_opportunity_notes limit="3rem"}}
  {{else}}
    {{> volunteering_opportunity_description limit="6rem" description=description}}
  {{/compare ~}}
  {{> volunteering_opportunity_actions slug=slug Id=Id home_based=home_based distance=distance action=action}}
</div>