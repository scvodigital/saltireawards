{
  "image": "{{> certificate_images_png_saltire}}",
  "width": 160,
  "alignment": "center",
  "margin": [0, 0, 0, 5]
},
{
  "text": {{>pdf_metadata_value key="title" default="V O L U N T E E R I N G   F O R"}},
  "margin": [0, 0, 0, 0],
  "style": ["subtitle", "bold"]
},
{
  "text": {{>pdf_metadata_value key="title" default="1 2   T O   2 5   Y E A R   O L D S"}},
  "margin": [0, 0, 0, 20],
  "style": ["subtitle", "bold"]
},
{
  "columns": [
    [
      {
        "width": "60%",
        {{#compare award "hours" ~}}
        {{#each @root.context.metaData.certificates ~}}
        {{#ifAll (compare ../type "group") (compare ../user.hours_verified "!==" 0) (compare ../user.hours_verified "!==" 1) ~}}
        {{#compare hours ../user.hours_verified ~}}
        "text": {{>pdf_metadata_value key="title" default=(concat hours " hours")}},
        "color": "{{getProperty @root.context.metaData.theme type}}",
        {{/compare ~}}
        {{else}}
        {{#compare (sumArray (pluck @root.data.tasksInfo "hours_verified")) ">=" hours ~}}
        {{#unless (compare hours 1) ~}}
        {{#unless (compare @root.data.accountInfo.hours_verify_award ">" next_award_hours) ~}}
        "text": {{>pdf_metadata_value key="title" default=(concat hours " hours")}},
        "color": "{{getProperty @root.context.metaData.theme type}}",
        {{/unless ~}}
        {{/unless ~}}
        {{/compare ~}}
        {{/ifAll ~}}
        {{/each ~}}
        {{else}}
        {{#each @root.context.metaData.certificates ~}}
        {{#compare ../award type ~}}
        "text": {{>pdf_metadata_value key="title" default=certificate_name}},
        "color": "{{getProperty @root.context.metaData.theme type}}",
        {{/compare ~}}
        {{/each ~}}
        {{/compare ~}}
        "margin": [0, 0, 0, 0],
        "style": ["award", "bold"]
      },
      {
        {{#compare award "summit" ~}}
        "text": {{>pdf_metadata_value key="title" default="contribution"}},
        {{else}}
        "text": {{>pdf_metadata_value key="title" default="volunteering"}},
        {{/compare ~}}
        "color": "{{@root.context.metaData.theme.secondary}}",
        "margin": [0, -10, 0, 5],
        "style": ["award", "bold"]
      },
      {
        {{#compare award "hours" ~}}
        {{#each @root.context.metaData.certificates ~}}
        {{#ifAll (compare ../type "group") (compare ../user.hours_verified "!==" 0) (compare ../user.hours_verified "!==" 1) ~}}
        {{#compare hours ../user.hours_verified ~}}
        {{#unless in_progress ~}}
        "text": {{>pdf_metadata_value key="title" default="Congratulations on your achievement of completing"}},
        {{else}}
        "text": {{>pdf_metadata_value key="title" default="Congratulations on your achievement on"}},
        {{/unless ~}}
        {{/compare ~}}
        {{else}}
        {{#compare (sumArray (pluck @root.data.tasksInfo "hours_verified")) ">=" hours ~}}
        {{#unless (compare hours 1) ~}}
        {{#unless (compare @root.data.accountInfo.hours_verify_award ">" next_award_hours) ~}}
        {{#unless in_progress ~}}
        "text": {{>pdf_metadata_value key="title" default="Congratulations on your achievement of completing"}},
        {{else}}
        "text": {{>pdf_metadata_value key="title" default="Congratulations on your achievement on"}},
        {{/unless ~}}
        {{/unless ~}}
        {{/unless ~}}
        {{/compare ~}}
        {{/ifAll ~}}
        {{/each ~}}
        {{else}}
        "text": {{>pdf_metadata_value key="title" default="Congratulations on your achievement of completing"}},
        {{/compare ~}}
        "margin": [0, 0, 0, 0],
        "style": "congratulations"
      },
      {
        {{#compare award "hours" ~}}
        {{#each @root.context.metaData.certificates ~}}
        {{#ifAll (compare ../type "group") (compare ../user.hours_verified "!==" 0) (compare ../user.hours_verified "!==" 1) ~}}
        {{#compare hours ../user.hours_verified ~}}
        "text": {{>pdf_metadata_value key="title" default=type_name}},
        "color": "{{getProperty @root.context.metaData.theme type}}",
        {{/compare ~}}
        {{else}}
        {{#compare (sumArray (pluck @root.data.tasksInfo "hours_verified")) ">=" hours ~}}
        {{#unless (compare hours 1) ~}}
        {{#unless (compare @root.data.accountInfo.hours_verify_award ">" next_award_hours) ~}}
        "text": {{>pdf_metadata_value key="title" default=type_name}},
        "color": "{{getProperty @root.context.metaData.theme type}}",
        {{/unless ~}}
        {{/unless ~}}
        {{/compare ~}}
        {{/ifAll ~}}
        {{/each ~}}
        {{else}}
        {{#each @root.context.metaData.certificates ~}}
        {{#compare ../award type ~}}
        "text": {{>pdf_metadata_value key="title" default=type_name}},
        "color": "{{getProperty @root.context.metaData.theme type}}",
        {{/compare ~}}
        {{/each ~}}
        {{/compare ~}}
        "margin": [0, 0, 0, 0],
        "style": ["award_name", "bold"]
      }
    ],
    {
      "width": "*",
      "text": ""
    },
    {
      "width": 120,
      {{#compare award "hours" ~}}
      {{#each @root.context.metaData.certificates ~}}
      {{#ifAll (compare ../type "group") (compare ../user.hours_verified "!==" 0) (compare ../user.hours_verified "!==" 1) ~}}
      {{#compare hours ../user.hours_verified ~}}
      {{#switch hours ~}}
      {{#case 10 ~}}
      "image": "{{> certificate_images_png_badges_approach_10}}",
      {{/case ~}}
      {{#case 25 ~}}
      "image": "{{> certificate_images_png_badges_approach_25}}",
      {{/case ~}}
      {{#case 50 ~}}
      "image": "{{> certificate_images_png_badges_ascent_50}}",
      {{/case ~}}
      {{#case 100 ~}}
      "image": "{{> certificate_images_png_badges_ascent_100}}",
      {{/case ~}}
      {{#case 200 ~}}
      "image": "{{> certificate_images_png_badges_ascent_200}}",
      {{/case ~}}
      {{#case 500 ~}}
      "image": "{{> certificate_images_png_badges_ascent_500}}",
      {{/case ~}}
      {{/switch ~}}
      {{/compare ~}}
      {{else}}
      {{#compare (sumArray (pluck @root.data.tasksInfo "hours_verified")) ">=" hours ~}}
      {{#unless (compare hours 1) ~}}
      {{#unless (compare @root.data.accountInfo.hours_verify_award ">" next_award_hours) ~}}
      {{#switch hours ~}}
      {{#case 10 ~}}
      "image": "{{> certificate_images_png_badges_approach_10}}",
      {{/case ~}}
      {{#case 25 ~}}
      "image": "{{> certificate_images_png_badges_approach_25}}",
      {{/case ~}}
      {{#case 50 ~}}
      "image": "{{> certificate_images_png_badges_ascent_50}}",
      {{/case ~}}
      {{#case 100 ~}}
      "image": "{{> certificate_images_png_badges_ascent_100}}",
      {{/case ~}}
      {{#case 200 ~}}
      "image": "{{> certificate_images_png_badges_ascent_200}}",
      {{/case ~}}
      {{#case 500 ~}}
      "image": "{{> certificate_images_png_badges_ascent_500}}",
      {{/case ~}}
      {{/switch ~}}
      {{/unless ~}}
      {{/unless ~}}
      {{/compare ~}}
      {{/ifAll ~}}
      {{/each ~}}
      {{else}}
      {{#each @root.context.metaData.certificates ~}}
      {{#compare ../award type ~}}
      {{#switch type ~}}
      {{#case "challenge" ~}}
      "image": "{{> certificate_images_png_badges_challenge}}",
      {{/case ~}}
      {{#case "summit" ~}}
      "image": "{{> certificate_images_png_badges_summit}}",
      {{/case ~}}
      {{/switch ~}}
      {{/compare ~}}
      {{/each ~}}
      {{/compare ~}}
      "alignment": "center",
      "margin": [0, 0, 0, 0]
    }
  ],
  "columnGap": 0,
  "margin": [0, 0, 0, 0]
},
{
  "text": "{{user.first_name}} {{user.last_name}}",
  "margin": [0, 20, 0, 0],
  "style": ["volunteer_name", "bold"]
},
{{#each tasks ~}}
{{#ifAny (ifAll (compare ../type "group") (compare ../user.hours_verified "!==" 0) (compare ../user.hours_verified "!==" 1)) (ifAll (compare hours_verified "!==" 0) (compare hours_verified "!==" 1)) ~}}
{{!-- {{#if task_description ~}}
{
  "text": "{{{task_description}}}",
  "margin": [0, 5, 0, 0],
  "style": "volunteering_detail"
},
{{/if ~}} --}}
{{#if testimonial ~}}
{
  "text": "\"{{{truncate testimonial 500}}}\"",
  "margin": [0, 15, 0, 0],
  "style": "volunteering_title"
},
{
  "text": "{{{volunteer_manager_first_name}}} {{{volunteer_manager_last_name}}}, {{{volunteer_manager_title}}} at {{{organisation_name}}}",
  "margin": [0, 5, 0, 0],
  "style": "volunteering_detail"
},
{{else}}
{
  "text": "{{{truncate task_description 500}}}",
  "margin": [0, 15, 0, 0],
  "style": "volunteering_title"
},
{
  "text": "Volunteering with {{{organisation_name}}}",
  "margin": [0, 5, 0, 0],
  "style": "volunteering_detail"
},
{{/if ~}}
{{/ifAny ~}}
{{/each ~}}
{{#if sdgs ~}}
{
  "text": "Contributing towards {{inflect (length (split sdgs ";")) "Goal" "Goals"}}:",
  "color": "{{> sdg_color sdg=un_sustainable_development_goals}}",
  "margin": [0, 10, 0, 0],
  "style": ["volunteering_detail", "bold"]
},
{{#each (unique (split sdgs ";")) ~}}
{{#if this ~}}
{
  "text": "{{> sdg_number sdg=this}}: {{this}}",
  "color": "{{> sdg_color sdg=this}}",
  "link": "https://globalgoals.org/{{> sdg_number sdg=this}}-{{slugify this}}",
  "margin": [0, 2, 0, 0],
  "style": ["volunteering_detail", "bold"]
},
{{/if ~}}
{{/each ~}}
