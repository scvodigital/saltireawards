{
  "image": "{{> certificate_images_png_saltire_awards}}",
  "width": 160,
  "alignment": "center",
  "margin": [0, 0, 0, 5]
},
{
  "text": {{>pdf_metadata_value key="title" default="V O L U N T E E R I N G   F O R"}},
  "margin": [0, 0, 0, 0],
  "style": ["subtitle", "bold"]
},
{
  "text": {{>pdf_metadata_value key="title" default="1 2   T O   2 5   Y E A R   O L D S"}},
  "margin": [0, 0, 0, 30],
  "style": ["subtitle", "bold"]
},
{
  "columns": [
    [
      {
        "width": "60%",
        {{#compare user.certificate_type "hours"}}
        "text": {{>pdf_metadata_value key="title" default=(concat user.hours_verified " hours")}},
        "color": "{{getProperty @root.context.metaData.theme type}}",
        {{else}}
        "text": {{>pdf_metadata_value key="title" default=(lowercase user.certificate_type)}},
        "color": "{{getProperty @root.context.metaData.theme type}}",
        {{/compare ~}}
        "margin": [0, -10, 0, 0],
        "style": ["award", "bold"]
      },
      {
        {{#compare user.certificate_type "Summit" ~}}
        "text": {{>pdf_metadata_value key="title" default="contribution"}},
        {{else}}
        "text": {{>pdf_metadata_value key="title" default="volunteering"}},
        {{/compare ~}}
        "color": "{{@root.context.metaData.theme.secondary}}",
        "margin": [0, -10, 0, 5],
        "style": ["award", "bold"]
      },
      {
        {{#compare user.certificate_type "hours" ~}}
        {{#each @root.context.metaData.certificates ~}}
        {{#compare api_name ../award_level ~}}
        {{#if in_progress ~}}
        "text": {{>pdf_metadata_value key="title" default="Congratulations on your achievement on"}},
        {{else}}
        "text": {{>pdf_metadata_value key="title" default="Congratulations on your achievement of completing"}},
        {{/if ~}}
        {{/compare ~}}
        {{/each ~}}
        {{else}}
        "text": {{>pdf_metadata_value key="title" default="Congratulations on your achievement of completing"}},
        {{/compare ~}}
        "margin": [0, 0, 0, 0],
        "style": "congratulations"
      },
      {
        {{#compare award "hours" ~}}
        {{#each @root.context.metaData.certificates ~}}
        {{#compare api_name ../award_level ~}}
        "text": {{>pdf_metadata_value key="title" default=type_name}},
        "color": "{{getProperty @root.context.metaData.theme type}}",
        {{/compare ~}}
        {{/each ~}}
        {{else}}
        {{#each @root.context.metaData.certificates ~}}
        {{#compare api_name ../award_level ~}}
        "text": {{>pdf_metadata_value key="title" default=type_name}},
        "color": "{{getProperty @root.context.metaData.theme type}}",
        {{/compare ~}}
        {{/each ~}}
        {{/compare ~}}
        "margin": [0, 0, 0, 0],
        "style": ["award_name", "bold"]
      }
    ],
    {
      "width": "*",
      "text": ""
    },
    {
      "width": 100,
      {{#if user.hours_verified ~}}
      {{#switch user.hours_verified ~}}
      {{#case 10 ~}}
      "image": "{{> certificate_images_png_badges_approach_10}}",
      {{/case ~}}
      {{#case 25 ~}}
      "image": "{{> certificate_images_png_badges_approach_25}}",
      {{/case ~}}
      {{#case 50 ~}}
      "image": "{{> certificate_images_png_badges_ascent_50}}",
      {{/case ~}}
      {{#case 100 ~}}
      "image": "{{> certificate_images_png_badges_ascent_100}}",
      {{/case ~}}
      {{#case 200 ~}}
      "image": "{{> certificate_images_png_badges_ascent_200}}",
      {{/case ~}}
      {{#case 500 ~}}
      "image": "{{> certificate_images_png_badges_ascent_500}}",
      {{/case ~}}
      {{/switch ~}}
      {{else}}
      {{#switch user.certificate_type ~}}
      {{#case "Challenge" ~}}
      "image": "{{> certificate_images_png_badges_challenge}}",
      {{/case ~}}
      {{#case "Summit" ~}}
      "image": "{{> certificate_images_png_badges_summit}}",
      {{/case ~}}
      {{/switch ~}}
      {{/if ~}}
      "alignment": "center",
      "margin": [0, 0, 0, 0]
    }
  ],
  "columnGap": 0,
  "margin": [0, 0, 0, 0]
},
{
  "text": {{>pdf_metadata_value key="title" default=(concat user.first_name " " user.last_name)}},
  "margin": [0, 20, 0, 0],
  "style": ["volunteer_name", "bold"],
  "fontSize": {{#compare (length (concat user.first_name " " user.last_name)) "<" 60}}30{{else}}{{#compare (length (concat user.first_name " " user.last_name)) "<" 100}}25{{else}}20{{/compare}}{{/compare}}
},
