{
  "image": "{{> certificate_images_png_saltire}}",
  "width": 160,
  "alignment": "center",
  "margin": [0, 0, 0, 0]
},
{
  "text": {{>pdf_metadata_value key="title" default="VOLUNTEERING FOR"}},
  "fontSize": 12,
  "bold": true,
  "alignment": "center",
  "margin": [0, 5, 0, 0]
},
{
  "text": {{>pdf_metadata_value key="title" default="12 TO 25 YEAR OLDS"}},
  "fontSize": 12,
  "bold": true,
  "alignment": "center",
  "margin": [0, 0, 0, 0]
},
{
  "columns": [
    [
      {
        "width": "60%",
        {{#compare award "hours" ~}}
        {{#each @root.context.metaData.certificates ~}}
        {{#ifAll (compare ../type "group") (compare ../user.hours_verified "!==" 0) (compare ../user.hours_verified "!==" 1) ~}}
        {{#compare hours ../user.hours_verified ~}}
        "text": {{>pdf_metadata_value key="title" default=(concat hours " hours")}},
        "color": "{{getProperty @root.context.metaData.theme type}}",
        {{/compare ~}}
        {{else}}
        {{#compare (sumArray (pluck @root.data.tasksInfo "hours_verified")) ">=" hours ~}}
        {{#unless (compare hours 1) ~}}
        {{#unless (compare @root.data.accountInfo.hours_verify_award ">" hours) ~}}
        "text": {{>pdf_metadata_value key="title" default=(concat hours " hours")}},
        "color": "{{getProperty @root.context.metaData.theme type}}",
        {{/unless ~}}
        {{/unless ~}}
        {{/compare ~}}
        {{/ifAll ~}}
        {{/each ~}}
        {{else}}
        {{#each @root.context.metaData.certificates ~}}
        {{#compare ../award type ~}}
        "text": {{>pdf_metadata_value key="title" default=certificate_name}},
        "color": "{{getProperty @root.context.metaData.theme type}}",
        {{/compare ~}}
        {{/each ~}}
        {{/compare ~}}
        "fontSize": 38,
        "bold": false,
        "alignment": "center",
        "margin": [0, 10, 0, 0]
      },
      {
        {{#compare award "summit" ~}}
        "text": {{>pdf_metadata_value key="title" default="CONTRIBUTION"}},
        {{else}}
        "text": {{>pdf_metadata_value key="title" default="VOLUNTEERING"}},
        {{/compare ~}}
        "color": "{{@root.context.metaData.theme.secondary}}",
        "fontSize": 18,
        "bold": true,
        "alignment": "center",
        "margin": [0, 0, 0, 5]
      },
      {
        {{#compare award "hours" ~}}
        {{#each @root.context.metaData.certificates ~}}
        {{#ifAll (compare ../type "group") (compare ../user.hours_verified "!==" 0) (compare ../user.hours_verified "!==" 1) ~}}
        {{#compare hours ../user.hours_verified ~}}
        {{#unless in_progress ~}}
        "text": {{>pdf_metadata_value key="title" default="Congratulations on your achievement of completing"}},
        {{else}}
        "text": {{>pdf_metadata_value key="title" default="Congratulations on your achievement on"}},
        {{/unless ~}}
        {{/compare ~}}
        {{else}}
        {{#compare (sumArray (pluck @root.data.tasksInfo "hours_verified")) ">=" hours ~}}
        {{#unless (compare hours 1) ~}}
        {{#unless (compare @root.data.accountInfo.hours_verify_award ">" hours) ~}}
        {{#unless in_progress ~}}
        "text": {{>pdf_metadata_value key="title" default="Congratulations on your achievement of completing"}},
        {{else}}
        "text": {{>pdf_metadata_value key="title" default="Congratulations on your achievement on"}},
        {{/unless ~}}
        {{/unless ~}}
        {{/unless ~}}
        {{/compare ~}}
        {{/ifAll ~}}
        {{/each ~}}
        {{else}}
        "text": {{>pdf_metadata_value key="title" default="Congratulations on your achievement of completing"}},
        {{/compare ~}}
        "fontSize": 14,
        "bold": false,
        "alignment": "center",
        "margin": [0, 0, 0, 0]
      },
      {
        {{#compare award "hours" ~}}
        {{#each @root.context.metaData.certificates ~}}
        {{#ifAll (compare ../type "group") (compare ../user.hours_verified "!==" 0) (compare ../user.hours_verified "!==" 1) ~}}
        {{#compare hours ../user.hours_verified ~}}
        "text": {{>pdf_metadata_value key="title" default=type_name}},
        "color": "{{getProperty @root.context.metaData.theme type}}",
        {{/compare ~}}
        {{else}}
        {{#compare (sumArray (pluck @root.data.tasksInfo "hours_verified")) ">=" hours ~}}
        {{#unless (compare hours 1) ~}}
        {{#unless (compare @root.data.accountInfo.hours_verify_award ">" hours) ~}}
        "text": {{>pdf_metadata_value key="title" default=type_name}},
        "color": "{{getProperty @root.context.metaData.theme type}}",
        {{/unless ~}}
        {{/unless ~}}
        {{/compare ~}}
        {{/ifAll ~}}
        {{/each ~}}
        {{else}}
        {{#each @root.context.metaData.certificates ~}}
        {{#compare ../award type ~}}
        "text": {{>pdf_metadata_value key="title" default=type_name}},
        "color": "{{getProperty @root.context.metaData.theme type}}",
        {{/compare ~}}
        {{/each ~}}
        {{/compare ~}}
        "fontSize": 16,
        "bold": true,
        "alignment": "center",
        "margin": [0, 0, 0, 0]
      }
    ],
    {
      "width": "*",
      "text": ""
    }
    {{!-- [
      ,
      {
        "width": "140",
        {{#compare type 'approach' ~}}
        "image": "{{> certificate_images_png_badge_approach}}",
        {{else}}
        "image": "{{> certificate_images_png_badge_ascent}}",
        {{/compare ~}}
        "alignment": "center",
        "margin": [0, 0, 0, 0]
      }
    ] --}}
  ],
  "columnGap": 0,
  "margin": [0, 0, 0, 0]
},
{
  "text": "{{user.first_name}} {{user.last_name}}",
  "fontSize": 20,
  "bold": false,
  "alignment": "center",
  "margin": [0, 30, 0, 0]
},
{{#each tasks ~}}
{{#ifAny (ifAll (compare ../type "group") (compare ../user.hours_verified "!==" 0) (compare ../user.hours_verified "!==" 1)) (ifAll (compare hours_verified "!==" 0) (compare hours_verified "!==" 1)) ~}}
{
  "text": "For: {{{organisation_name}}}",
  "fontSize": 12,
  "bold": false,
  "alignment": "left",
  "margin": [0, 15, 0, 0]
},
{{#if task_description ~}}
{
  "text": "{{{task_description}}}",
  "fontSize": 10,
  "bold": false,
  "alignment": "left",
  "margin": [0, 5, 0, 0]
},
{{/if ~}}
{{/ifAny ~}}
{{/each ~}}
{{#if sdgs ~}}
{
  "text": "Contributing towards {{inflect (length (split sdgs ";")) "SDG" "SDGs"}}:",
  "fontSize": 10,
  "color": "{{> sdg_color sdg=un_sustainable_development_goals}}",
  "bold": true,
  "alignment": "left",
  "margin": [0, 5, 0, 0]
},
{{#each (unique (split sdgs ";")) ~}}
{{#if this ~}}
{
  "text": "{{> sdg_number sdg=this}}: {{this}}",
  "fontSize": 10,
  "color": "{{> sdg_color sdg=this}}",
  "bold": true,
  "alignment": "left",
  "margin": [0, 2, 0, 0]
},
{{/if ~}}
{{/each ~}}
{{/if ~}}
