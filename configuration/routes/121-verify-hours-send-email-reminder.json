{
  "name": "verify-hours-email-send-reminder",
  "pattern": "/verify-hours-email-send-reminder",
  "debug": true,
  "errorRoute": "five_hundred",
  "metaData": {
    "title": "Tasks",
    "emailType": "hours-verify-reminder"
  },
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    "context.metaData.commonTasks.getSignUpStatus",
    "context.metaData.commonTasks.getAccountInfo",
    "context.metaData.commonTasks.fullSignUpRequired",
    "context.metaData.commonTasks.getTasksInfoUnverified",
    {
      "name": "sendEmail",
      "taskModule": "mailgun",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "parseJson": true,
        "template": ">context.metaData.handlebars.templates.volunteering_email_verify-hours"
      }
    },
    {
      "name": "destination",
      "taskModule": "redirect",
      "config": {
        "location": "/achievements",
        "statusCode": 302
      }
    }

  ]
}