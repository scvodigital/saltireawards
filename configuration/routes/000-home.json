{
  "name": "home",
  "pattern": ["/", ""],
  "debug": true,
  "errorRoute": "five_hundred",
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    {
      "name": "cacheTest",
      "taskModule": "render",
      "renderer": "handlebars",
      "cache": {
        "keyProperties": ["request.fullUrl"],
        "partition": "{{request.url.host}}",
        "ttl": 120
      },
      "config": {
        "output": "data",
        "template": "{ \"test\": \"This is a test\" }",
        "parseJson": true
      }
    },
    {
      "name": "reroute",
      "taskModule": "reroute",
      "config": {
        "if": [
          { "missing": ["data.auth.uid"] },
          "home_not_authenticated",
          "home_authenticated"
        ]
      }
    }
  ]
}