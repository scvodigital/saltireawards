{
  "name": "test-clip-code",
  "pattern": "/test-clip-code",
  "acceptedVerbs": "POST,GET",
  "debug": true,
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    "context.metaData.commonTasks.getAccountInfo",
    "context.metaData.commonTasks.isAdmin",
    "context.metaData.commonTasks.adminOrCodeRequired",
    {
      "name": "codeValues",
      "taskModule": "firebaseRtbGet",
      "renderer": "handlebars",
      "config": {
        "appName": "saltireawards",
        "pathTemplate": "/YoungScot-codes/",
        "setOrUpdate": "get"
      }
    },
    {
      "name": "ysCode",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": "{{@root.data.codeValues.codes.[0]}}"
      }
    },
    {
      "name": "newCodeValues",
      "taskModule": "firebaseRtbSet",
      "renderer": "handlebars",
      "config": {
        "appName": "saltireawards",
        "pathTemplate": "/YoungScot-codes/",
        "setOrUpdate": "set",
        "dataTemplate": "{\"codes\" : [{{#eachJoin (slice @root.data.codeValues.codes 1 undefined) \",\"}}\"{{this}}\"{{/eachJoin}}] }"
      }
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_head-tags",
              "body": ">context.metaData.handlebars.templates.pages_test",
              "sidebar": ">context.metaData.handlebars.templates.account_sidebar"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}