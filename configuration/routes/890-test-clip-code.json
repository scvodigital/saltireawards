{
  "name": "test-clip-code",
  "pattern": "/test-clip-code",
  "acceptedVerbs": "POST,GET",
  "debug": true,
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    "context.metaData.commonTasks.getAccountInfo",
    "context.metaData.commonTasks.isAdmin",
    {
      "name": "codeValues",
      "taskModule": "firebaseRtbGet",
      "renderer": "handlebars",
      "config": {
        "appName": "saltireawards",
        "pathTemplate": "/young-scot-codes/unclaimed/{{default @root.request.params.query.award 'nope'}}/",
        "setOrUpdate": "get"
      }
    },
    {
      "name": "ysCode",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": "{{@root.data.codeValues.[0]}}"
      }
    },
    {
      "name": "newCodeValues",
      "taskModule": "firebaseRtbSet",
      "renderer": "handlebars",
      "config": {
        "appName": "saltireawards",
        "pathTemplate": "/young-scot-codes/unclaimed/{{default @root.request.params.query.award 'dubious'}}/",
        "setOrUpdate": "set",
        "dataTemplate": "[{{#eachJoin (slice @root.data.codeValues 1 undefined) \",\"}}\"{{this}}\"{{/eachJoin}}]"
      }
    },
    {
      "name": "newCodeValue",
      "taskModule": "firebaseRtbSet",
      "renderer": "handlebars",
      "config": {
        "appName": "saltireawards",
        "pathTemplate": "/young-scot-codes/claimed/{{default @root.request.params.query.award 'nope'}}/{{default @root.data.ysCode 'nope'}}",
        "setOrUpdate": "set",
        "dataTemplate": "\"{{default @root.request.params.query.user_id 'unknown'}}\""
      }
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_head-tags",
              "body": ">context.metaData.handlebars.templates.pages_test",
              "sidebar": ">context.metaData.handlebars.templates.account_sidebar"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}