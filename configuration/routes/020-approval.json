{
  "name": "approval",
  "pattern": "/user-approval",
  "debug": true,
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    {
      "name": "apexUrl",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": "/SaltireUser/?user_id={{@root.request.params.query.id}}"
      }
    },
    {
      "name": "accountInfo",
      "taskModule": "salesforceApex",
      "renderer": "handlebars",
      "config": {
        "connection": "scvoAlexSandbox",
        "output": "data",
        "method": "GET",
        "apexClassPath": ">data.apexUrl"
      }
    },
    {
      "name": "codeApproved",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": ">context.metaData.handlebars.templates.account_approval-code"
      }
    },
    {
      "name": "handlePassFail",
      "taskModule": "reroute",
      "config": {
        "if": [
          {
            "==": [
              {
                "var": "data.codeApproved"
              },
              "pass"
            ]
          },
          null,
          "approval-fail"
        ]
      }
    },
    {
      "name": "userApproval",
      "taskModule": "salesforceApex",
      "renderer": "handlebars",
      "config": {
        "connection": "scvoAlexSandbox",
        "output": "data",
        "method": "POST",
        "body": ">context.metaData.handlebars.templates.account_approval-body",
        "apexClassPath": "/SaltireUserValidate/"
      }
    },
    {
      "name": "passDestination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_head-tags",
              "body": ">context.metaData.handlebars.templates.pages_approval-pass",
              "foot": ""
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}