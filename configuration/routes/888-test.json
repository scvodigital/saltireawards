{
  "name": "test-page",
  "pattern": "/test-page",
  "debug": true,
  "metaData": {
    "title": "Tasks",
    "emailType": "hours-verify"
  },
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    "context.metaData.commonTasks.getAccountInfo",
    "context.metaData.commonTasks.getTasksInfoUnverified",
    "context.metaData.commonTasks.flushCache",
    {
      "name": "makeTaskData",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": ">context.metaData.handlebars.templates.volunteering_task-body"
      }
    },
    {
      "name": "things",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": "{{#eachJoin @root.data.tasksInfoUnverified ','}}{{#compare unverified_hours_list.length '>=' 1}}{{#compare this.volunteer_manager_email '===' 'anuttgens@gmail.com'}}{{task_id}}{{/compare}}{{/compare}}{{/eachJoin}}"
      }
    },
    {
      "name": "apexBody",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "template": ">context.metaData.handlebars.templates.volunteering_apex-verify-hours-body",
        "parseJson": true
      }
    },

    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_head-tags",
              "body": ">context.metaData.handlebars.templates.pages_test",
              "sidebar": ">context.metaData.handlebars.templates.account_sidebar"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}