{
  "name": "test-page",
  "pattern": "/test-page(/:task_id)",
  "errorRoute": "five_hundred",
  "debug": true,
  "metaData": {
    "title": "Tasks",
    "emailType": "hours-verify"
  },
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    "context.metaData.commonTasks.flushCache",
    "context.metaData.commonTasks.getAccountInfo",
    "context.metaData.commonTasks.getTasksInfoUnverified",
    "context.metaData.commonTasks.tasksByEmail",
    "context.metaData.commonTasks.hoursCodeVerifyAdvanced",
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_head-tags",
              "body": ">context.metaData.handlebars.templates.pages_test",
              "sidebar": ">context.metaData.handlebars.templates.account_sidebar"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}