{
  "name": "submit-task-details",
  "pattern": "/submit-task-details",
  "debug": true,
  "acceptedVerbs": "GET, POST",
  "defaultParams": {
    "context": "results"
  },
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    "context.metaData.commonTasks.getSignUpStatus",
    "context.metaData.commonTasks.getAccountInfo",
    "context.metaData.commonTasks.fullSignUpRequired",
    {
      "name": "saveTaskData",
      "taskModule": "salesforceApex",
      "renderer": "handlebars",
      "config": {
        "connection": "scvoAlexSandbox",
        "output": "data",
        "method": "POST",
        "body": ">context.metaData.handlebars.templates.task_task-body",
        "apexClassPath": "/SaltireTask/?user_id={{@root.data.auth.uid}}"
      }
    }
  ,{
      "name": "destination",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "body",
        "template": "{\"id\": \"{{{@root.data.saveTaskData}}}\" {{#if @root.errors}}, \"errors\": {{{safeStringify @root.errors}}}{{/if}} }",
        "parseJson": false
      }
    }
  ]
}