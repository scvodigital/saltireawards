{
  "name": "submit-hours-claim",
  "pattern": "/submit-hours-claim",
  "debug": true,
  "errorRoute": "five_hundred_json",
  "tasks": [
    "context.metaData.commonTasks.authNotRequired",
    "context.metaData.commonTasks.verifyHoursInfo",
    "context.metaData.commonTasks.getSignUpStatus",
    "context.metaData.commonTasks.getAccountInfo",
    "context.metaData.commonTasks.fullSignUpRequired",
    {
      "name": "claimHoursResult",
      "taskModule": "salesforceApex",
      "renderer": "handlebars",
      "config": {
        "connection": "scvoAlexSandbox",
        "output": "data",
        "method": "POST",
        "body": ">context.metaData.handlebars.templates.volunteering_hours-claim-body",
        "apexClassPath": "/SaltireHoursClaim/"
      }
    },
    "context.metaData.commonTasks.flushCache",
    {
      "name": "flushOtherCache",
      "taskModule": "cacheFlush",
      "renderer": "handlebars",
      "config": {
        "partition": "saltire-profiles-{{@root.data.claimHoursResult.group_admin_id}}"
      }
    },
    {
      "name": "destination",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "body",
        "template": "{{{stringify @root.data.claimHoursResult}}}",
        "parseJson": true
      }
    }
  ]
}