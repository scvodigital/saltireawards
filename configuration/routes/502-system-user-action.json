{
  "name": "user-action",
  "pattern": "/user-action",
  "debug": true,
  "errorRoute": "five_hundred",
  "metaData": {
    "title": "Tasks"
  },
  "tasks": [
    "context.metaData.commonTasks.authRequired",
    "context.metaData.commonTasks.getAccountInfoExternal",
    "context.metaData.commonTasks.fullSignUpRequired",
    "context.metaData.commonTasks.getTasksInfoUnverified",
    {
      "name": "sendEmail",
      "taskModule": "mailgun",
      "renderer": "handlebars",
      "config": {
        "output": "data",
        "parseJson": true,
        "template": ">context.metaData.handlebars.templates.volunteering_email_user-action"
      }
    },
    {
      "name": "destination",
      "taskModule": "render",
      "renderer": "handlebars",
      "config": {
        "output": "body",
        "template": "{\"success\": true, \"action_on\" : \"{{@root.data.accountInfo.external_id}}\" }",
        "parseJson": true
      }
    }

  ]
}