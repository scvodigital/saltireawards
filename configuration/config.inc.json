{
  "domains": [
    "saltireawards.local",
    "test.saltireawards.scot",
    "saltireawards.scot",
    "test.saltireawards.org.uk",
    "saltireawards.org.uk"
  ],
  "routes": [
    "{:./routes/*.json}"
  ],
  "metaData": {
    "assetsVersion": "{:../package.json@version}",
    "assetsBase": "https://storage.googleapis.com/scvo-assets/test/saltireawards/",
    "title": "Saltire Awards",
    "certificateName": "Saltire Award",
    "accountName": "My Saltire",
    "url": "https://test.saltireawards.scot",
    "twitter": "saltireawards",
    "contacts": {
      "admin": "support@saltireawards.org.uk",
      "noreply": "noreply@saltireawards.org.uk",
      "technical": "webhelpdesk@scvo.org.uk"
    },
    "emailSendSettings": "{:./data/email-send-settings.json}",
    "menus": "{:./data/menus.json}",
    "accountInfoValidation": "{:./data/account-info-validation.json}",
    "taskInfoValidation": "{:./data/task-info-validation.json}",
    "certificates": "{:./data/certificates.json}",
    "tsiList": "{:./data/tsi-list.json}",
    "globalGoals": "{:./data/global-goals.json}",
    "elasticsearchUrl": "{$./data/elasticsearch-url.txt}",
    "volunteeringTerms": "{:./data/volunteering-terms.json}",
    "handlebars": {
      "partials": {
        "{$./partials/**/*.*}": "includeRelativePath=false&regexExpression=(-)&regexOptions=gi&regexReplace=_"
      },
      "templates": {
        "{$./templates/**/*.*}": ""
      },
      "layouts": {
        "{$./layouts/**/*.*}": ""
      },
      "queries": {
        "{$./queries/**/*.*}": ""
      },
      "frontend": {
        "tasks": {
          "{$./frontend/tasks/**/*.*}": ""
        },
        "configs": {
          "{$./frontend/configs/**/*.*}": ""
        },
        "partials": {
          "{$./frontend/partials/**/*.*}": ""
        }
      }
    },
    "commonTasks": "{:./data/common-tasks.json}"
  }
}